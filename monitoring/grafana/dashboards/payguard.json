{
  "dashboard": {
    "id": null,
    "title": "PayGuard API Overview",
    "tags": ["payguard", "api"],
    "timezone": "browser",
    "schemaVersion": 36,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(payguard_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(payguard_requests_total{status=~\"5..\"}[5m]) / rate(payguard_requests_total[5m])",
            "legendFormat": "Error %"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "P95 Latency",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(payguard_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Active API Keys",
        "type": "stat",
        "targets": [
          {
            "expr": "payguard_active_api_keys",
            "legendFormat": "Active Keys"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Risk Level Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "rate(payguard_risk_checks_total[5m])",
            "legendFormat": "{{risk_level}}"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Latency Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(payguard_request_duration_seconds_bucket[5m])",
            "format": "heatmap"
          }
        ],
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 8}
      },
      {
        "id": 7,
        "title": "ML Model Health",
        "type": "table",
        "targets": [
          {
            "expr": "payguard_model_loaded",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024 / 1024",
            "legendFormat": "GB"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "name": "Alerts",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertstate=\"firing\"}",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}"
        }
      ]
    }
  }
}
